<h1>Alpha Blog Users</h1>

<% @users.each do |user| %>
  <div>
    <div><%= gravatar_for user, size: 100, styles: 'width:150px' %></div>
    <div><%= link_to user.username, user %></div>
    <div><%= pluralize(user.articles.count, "article") %></div>
    <small>Joined: <%= time_ago_in_words(user.created_at) %></small>
    <p>
      <span><%= link_to 'View Profile', user_path(user) %></span>
      <% if logged_in? && (user == current_user || current_user.admin?) %>
        | 
        <span><%= link_to 'Edit Profile', edit_user_path(user) %></span>
        | 
        <span><%= link_to 'Delete User', user_path(user), method: :delete, data: {confirm: "Are you sure?"}  %></span>
      <% end %>
    </p>
    <hr>

  </div>
<% end %>