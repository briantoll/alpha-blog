<h1>Log in to Alpha Blog</h1>

<div>
  <div>
    <div>
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        
        <div>
          <%= f.label :email %>
          <div> 
            <%= f.email_field :email,  placeholder: "Email" %>
          </div>
        </div>

        <div>
          <%= f.label :password %>
          <div> 
            <%= f.password_field :password,  placeholder: "Password" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign Up" %>
        </div>
      <% end %>
    </div>
    <div>
      <%= link_to 'Cancel', root_path %>
    </div>
  </div>
</div>